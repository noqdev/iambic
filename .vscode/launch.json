            "env": {
                "AWS_PROFILE": "noq_dev"
            },
            "justMyCode": true
        },
        {
            "name": "Iambic Apply",
            "type": "python",
            "request": "launch",
            "module": "iambic.main",
            "console": "integratedTerminal",
            "env": {
                "AWS_PROFILE": "noq_dev"
            },
            "args": [
                "apply",
            "--template",
            "../noq-templates/resources/aws/roles/application/noqmeter_null_test_role.yaml",
